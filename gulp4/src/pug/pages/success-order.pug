extends ../templates/default.pug

block siteHead
  -
    menu = 'order-success'
    titleWeb = 'Order Success'
    descWeb = 'Order Success'

block siteContent
  -
  include ../layouts/header.pug
  .success-order
    .container
      .card
        h2 Terimaksih sudah melakukan order aplikasi kami
        p Untuk menyelesaikan order silahkan transfer sejulmlah
        .button-price
          p(style='display: none;')
            | 1500000
